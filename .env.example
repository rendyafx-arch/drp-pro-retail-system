# ============================================================================
# DRP-PRO Configuration File - Environment Variables
# Copy this file to .env and fill in your actual values
# ============================================================================

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here
SUPABASE_JWT_SECRET=your_jwt_secret_here

# ============================================================================
# POWER APPS CONFIGURATION
# ============================================================================
POWERAPPS_TENANT_ID=your_microsoft_tenant_id
POWERAPPS_CLIENT_ID=your_power_apps_client_id
POWERAPPS_CLIENT_SECRET=your_power_apps_client_secret
POWERAPPS_ENVIRONMENT_URL=https://your-org.crm.dynamics.com

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DB_HOST=your-project-id.supabase.co
DB_PORT=5432
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_SSL=true

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_URL=https://api.drp-pro.local
API_PORT=3000
API_TIMEOUT=30000
API_RATE_LIMIT=1000

# ============================================================================
# EMAIL CONFIGURATION (For Power Automate)
# ============================================================================
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your_email@outlook.com
SMTP_PASSWORD=your_outlook_password
SMTP_FROM_EMAIL=noreply@drp-pro.local
SMTP_FROM_NAME=DRP-PRO System

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=DRP-PRO
APP_VERSION=1.0.0
APP_ENV=development
APP_LOG_LEVEL=info
APP_TIMEZONE=Asia/Jakarta

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
JWT_EXPIRY=7d
JWT_REFRESH_EXPIRY=30d
SESSION_TIMEOUT=900
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true
MAX_LOGIN_ATTEMPTS=5
LOCK_DURATION=900

# ============================================================================
# BACKUP & MAINTENANCE
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ============================================================================
# OPTIONAL: WhatsApp Integration (if using WAHA)
# ============================================================================
WHATSAPP_ENABLED=false
WHATSAPP_API_URL=http://localhost:3000
WHATSAPP_API_KEY=your_waha_api_key
WHATSAPP_WEBHOOK_URL=https://yourdomain.com/webhooks/whatsapp

# ============================================================================
# OPTIONAL: Docker Configuration
# ============================================================================
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_TAG=latest
DOCKER_COMPOSE_VERSION=3.8

# ============================================================================
# OPTIONAL: Development Settings
# ============================================================================
DEVELOPMENT=false
DEBUG=false
VERBOSE_LOGGING=false
